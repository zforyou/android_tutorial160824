<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/textViewID"
        android:textSize="30dp"
        android:text="ID :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_alignBottom="@id/textViewID"
        android:layout_toRightOf="@id/textViewID"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textViewID"
        android:textSize="30dp"
        android:text="PW :"
        android:layout_below="@id/textViewID"
        android:id="@+id/textViewPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_alignBaseline="@id/textViewPW"
        android:layout_toRightOf="@id/textViewPW"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignLeft="@id/textViewPW"
        android:text="login"
        android:layout_below="@id/textViewPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>